# Production Environment Configuration
# Copy this file to .env.production and update with production values

# Application
NODE_ENV=production
PORT=5000

# Database - PostgreSQL
POSTGRES_HOST=postgres
POSTGRES_PORT=5432
POSTGRES_USER=fata_prod_user
POSTGRES_PASSWORD=strong_production_password_here
POSTGRES_DB=fata_prod_db
DATABASE_URL=postgresql://fata_prod_user:strong_production_password_here@postgres:5432/fata_prod_db

# Redis
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=strong_redis_production_password_here
REDIS_URL=redis://:strong_redis_production_password_here@redis:6379

# JWT (if using authentication)
JWT_SECRET=your-strong-production-jwt-secret-key
JWT_EXPIRATION=3600

# External APIs
# API_KEY=your-production-api-key

# Logging
LOG_LEVEL=info

# CORS (update with your frontend domain)
# CORS_ORIGIN=https://yourdomain.com

# Additional production settings
# RATE_LIMIT_MAX=100
# RATE_LIMIT_WINDOW_MS=900000