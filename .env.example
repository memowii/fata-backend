# Application
NODE_ENV=development
PORT=5000
APP_NAME="From Article to Audio"
API_VERSION=v1

# Database - PostgreSQL
# Note: When running in Docker, use 'postgres' as the host (container name)
# For external connections, use localhost with the mapped port (default: 5434)
POSTGRES_HOST=postgres
POSTGRES_PORT=5434
POSTGRES_USER=fata_user
POSTGRES_PASSWORD=fata_password
POSTGRES_DB=fata_db
DATABASE_URL=postgresql://fata_user:fata_password@postgres:5432/fata_db

# Redis
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=fata_redis_password
REDIS_URL=redis://:fata_redis_password@redis:6379

# JWT Authentication
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRATION=15m
JWT_REFRESH_SECRET=your-super-secret-refresh-key-change-this-in-production
JWT_REFRESH_EXPIRATION=30d

# Email Configuration (Legacy SMTP - now using AWS SES)
# SMTP_HOST=localhost
# SMTP_PORT=1025
# SMTP_USER=
# SMTP_PASS=
# EMAIL_FROM=noreply@fata-backend.com

# AWS SES Configuration (Primary Email Service)
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_SES_FROM_EMAIL=noreply@yourdomain.com
AWS_SES_FROM_NAME=From Article to Audio
# AWS_SES_CONFIGURATION_SET=your-configuration-set  # Optional for tracking

# Email Settings
EMAIL_VERIFICATION_EXPIRY=24h
PASSWORD_RESET_EXPIRY=1h

# Frontend URL (for email links)
FRONTEND_URL=http://localhost:3000

# Security
BCRYPT_ROUNDS=10
MAX_LOGIN_ATTEMPTS=5
LOCK_TIME=15m

# External APIs
# API_KEY=your-api-key

# Logging
# LOG_LEVEL=debug

# CORS (if needed)
# CORS_ORIGIN=http://localhost:3000